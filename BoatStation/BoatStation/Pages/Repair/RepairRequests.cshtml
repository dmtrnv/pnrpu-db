@page
@model BoatStation.Pages.Repair.RepairRequests

@{
    Layout = "Shared/_Layout";
}

<!DOCTYPE html>

<html lang="ru">
<head>
    <title>Заявки на ремонт</title>
</head>
<body>
<h3>Плав. средства, подлежащие ремонту</h3>
<div>
    <table class="table-bordered">
        <thead>
        @foreach (var header in Model.WatercraftToRepair.Headers)
        {
            <th>@header</th>
        }
        </thead>
        <tbody>
        @foreach (var row in Model.WatercraftToRepair.Values)
        {
            <tr>
                @foreach (var value in row)
                {
                    <td>@value</td>
                }
                <td>
                    <form method="post" class="form-group">
                        <input type="hidden" name="inventoryNumber" value="@row.Last()"/>
                        <button type="submit" id="btn-repair">Отремонтировать</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
</body>
</html>