            @foreach (var propName in Model.NotNullManufacturerPropertiesNames)
            {
                <td>@manufacturer.GetPropertyValueToString(propName)</td>
            }
            </tr>
        }
        </tbody>
    </table>
    }
    else
    {
    <p>Manufacturers</p>
    <table class="flex-item">
        <thead>
        @foreach (var prop in typeof(Manufacturer).GetProperties())
        {
            <th>@prop.Name</th>
        }
        </thead>
        <tbody>
        </tbody>
    </table>
    }
}